@model Model.specialite

@{
    ViewBag.Title = "Details";
}

<h2>Détails</h2>

<div>
    <h4>specialite</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Libellé")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LbSpecialite)
        </dd>

    </dl>
</div>

@if (Model.Medecins.Count != 0)
{
<p>Liste des médecins de la spécialité :</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nom")
        </th>
        <th>
            @Html.DisplayName("Prénom")
        </th>
        <th>
            @Html.DisplayName("Adresse")
        </th>
        <th>
            @Html.DisplayName("Téléphone")
        </th>
        <th>
            @Html.DisplayName("Départements")
        </th>
    </tr>

    @foreach (var item in Model.Medecins)
    {
    <tr>
        <th>
            @Html.DisplayFor(modelItem => item.NomMedecin)
        </th>
        <th>
            @Html.DisplayFor(modelItem => item.PrenomMedecin)
        </th>
        <th>
            @Html.DisplayFor(modelItem => item.AdresseMedecin)
        </th>
        <th>
            @Html.DisplayFor(modelItem => item.TelephoneMedecin)
        </th>
        <th>
            @Html.DisplayFor(modelItem => item.Departement.NomDepartement)
        </th>
    </tr>
    }
</table>
}

<p>
    @Html.ActionLink("Modifier", "Edit", new { id = Model.IdSpecialite }) |
    @Html.ActionLink("Retour", "Index")
</p>
